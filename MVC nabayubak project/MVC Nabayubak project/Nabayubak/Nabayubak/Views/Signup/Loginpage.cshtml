@*@model IEnumerable<Nabayubak.Models.SignUp>*@
@{
   
    var Userlist = (List<Nabayubak.Models.SignUp>)ViewBag.Userlist; 
}
    <style>
   
        .form-block {
            padding: 8px 16px;
        }

        form label {
            padding: 16px;
            background: grey;
        }
        .login-dialog {
            display: inline-block;
            padding: 16px;
            background: lightblue;
            border-radius: 2px;
        }
        #background {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }
        .blank-background {
            background-color: #284461;
        }
        ul {
            display: block;
            list-style-type: disc;
            margin: 0;
            padding: 0;
            list-style: none;
        }

        li {
            display: list-item;
            text-align: -webkit-match-parent;
        }
        .main-container {
            font-family: 'Roboto', sans-serif;
            text-shadow: 3px 3px rgba(0, 0, 0, 0.3);
            color: white;
            top: 0;
            right: 0;
            opacity: 1;
            z-index: 10;
        }
        #bottom, #bottom-left, #bottom-right, #center, #center-above, #center-below, #top-left, #top-right {
            position: absolute;
            z-index: 3;
        }
        #center, #center-above, #center-below {
            display: block;
            top: 50%;
            left: 50%;
            width: 100%;
            text-align: center;
            -webkit-transform: translate(-50%, -50%);
        }
        .form-header {
            background: #316fa9;
            margin: -16px -16px 0;
            padding: 16px;
        }

            .form-header img {
                height: 32px;
            }
        .form-block {
            padding: 8px 16px;
        }
        form label {
            padding: 16px;
            background: grey;
        }

        form input[type="text"], form input[type="password"] {
            width: 280px;
            font-size: 16px;
            padding: 10px 12px 15px;
            margin: 3px 0 0;
        }
        input[type="submit"] {
            border-radius: 2px;
            margin: 2px;
            background: #316fa9;
            color: white;
            width: 100%;
            padding: 12px;
            border: 0;
            font-size: 20px;
        }

            input[type="submit"]:hover {
                transform: translateY(-1px);
                box-shadow: 1px 1px grey;
            }

            input[type="submit"][disabled] {
                background: grey;
            }
        .quote {
            padding: 10px 0;
            font-size: 24px;
            width: 60%;
            margin: auto;
        }
        #bottom {
            width: 50%;
            bottom: 0;
            left: 50%;
            opacity: 1;
            -webkit-transform: translateX(-50%);
        }

        #top-right {
            top: 0;
            right: 0;
        }

        #top-left {
            top: 0;
            left: 0;
        }

        #bottom-right {
            bottom: 0;
            right: 0;
        }

        #bottom-left {
            bottom: 0;
            left: 0;
            z-index: 100;
        }

        #center-above, #center-below {
            left: 0;
            top: 72.5%;
            -webkit-transform: translate(0, 0);
            text-align: center;
        }

        #center-above {
            top: 0;
            z-index: 1;
        }
        .userdropdown {
            width: 280px;
            font-size: 16px;
            padding: 10px 12px 15px;
            margin: 3px 0 0;
        }
       
    </style>
<header>
</header>

<body>
    <ul>
        <li id="background" class="blank-background"></li>
    </ul>
    <div class="main-container">
        <div class="top-left"></div>
        <div class="top-right"></div>
         
        <div id="center-above"></div>
        <div id="center">
            <form id="login-form" method="post">
                <div class="login-dialog">
                    <div class="form-header"> <b></b>
                    @if (@ViewBag.loginStatus == "False") { 
                        <span style="color:red">Login Failed.Please enter correct username and password</span>}
                    else { 
                    <span></span>
                    }
                        @*<span class="brand-logo"><img src="assets/images/cf.png"></span>*@
                    </div>
                    <div class="form-block">
                        <label for="username">
                            <svg x="0px" y="0px" width="12px" height="13px">
                                <path fill="#B1B7C4" d="M8.9,7.2C9,6.9,9,6.7,9,6.5v-4C9,1.1,7.9,0,6.5,0h-1C4.1,0,3,1.1,3,2.5v4c0,0.2,0,0.4,0.1,0.7 C1.3,7.8,0,9.5,0,11.5V13h12v-1.5C12,9.5,10.7,7.8,8.9,7.2z M4,2.5C4,1.7,4.7,1,5.5,1h1C7.3,1,8,1.7,8,2.5v4c0,0.2,0,0.4-0.1,0.6 l0.1,0L7.9,7.3C7.6,7.8,7.1,8.2,6.5,8.2h-1c-0.6,0-1.1-0.4-1.4-0.9L4.1,7.1l0.1,0C4,6.9,4,6.7,4,6.5V2.5z M11,12H1v-0.5 c0-1.6,1-2.9,2.4-3.4c0.5,0.7,1.2,1.1,2.1,1.1h1c0.8,0,1.6-0.4,2.1-1.1C10,8.5,11,9.9,11,11.5V12z">
                                </path>
                            </svg>
                        </label>
                        <select class="userdropdown" name="username" id="dropdown" required>
                            <option value="" selected="" disabled="">Select username</option>
                            @foreach (var item in Userlist)
                            {
                                <option value="@item.Username">@item.Username</option>
                            }
                        </select>
                        @*<input id="username" name="username" ref="username" type="text" autocomplete="off" placeholder="Username" required="">*@
                    </div>
                    <div class="form-block">
                        <label class="fontawesome-lock">
                            <svg x="0px" y="0px" width="15px" height="5px">
                                <g>
                                    <path fill="#B1B7C4" d="M6,2L6,2c0-1.1-1-2-2.1-2H2.1C1,0,0,0.9,0,2.1v0.8C0,4.1,1,5,2.1,5h1.7C5,5,6,4.1,6,2.9V3h5v1h1V3h1v2h1V3h1 V2H6z M5.1,2.9c0,0.7-0.6,1.2-1.3,1.2H2.1c-0.7,0-1.3-0.6-1.3-1.2V2.1c0-0.7,0.6-1.2,1.3-1.2h1.7c0.7,0,1.3,0.6,1.3,1.2V2.9z">
                                    </path>
                                </g>
                            </svg>
                        </label>
                        <input id="password" name="password" ref="password" type="password" placeholder="Password" required="">
                    </div>
                    <div class="form-block">
                        <input id="login-submit" type="submit" value="Login">
                    </div>
                </div>
            </form>
        </div>
        
        <div id="center-below">
            <div class="quote">
                <small>Don't have an account? <button class="lightgray" id="btnsignup"> sign up </button></small>
            </div>
        </div>
        <div class="bottom-left"></div>
        <div class="bottom-right"></div>
    </div>
</body>
<footer></footer>
<script>
    $(document).ready(function () {

        $('#btnsignup').click(function () {
            document.location = '@Url.Action("signup", "Signup")';
            
        });
    });
</script>